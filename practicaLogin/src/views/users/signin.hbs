<div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <style>h1{text-align: center;}</style>
                <h1>Iniciar sesión</h1>
            </div>
            <div class="card-body"></div>

            <div class="card-footer">
                <form action="/users/signin" method="POST">
                
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Correo" id="Correo" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Contraseña" id="Contrasena" class="form-control" required>
                    </div>
                    <br>
                    <button class="btn btn-lg btn-primary"> <style> button{width: 100%;} </style> Iniciar sesión</button>
                    <br><br>

                    {{!-- {{#each users}} --}}
                    <div class="enlace">
                    <a href="/email ">Olvidé mi contraseña</a>
                    </div>
                    {{!-- {{/users}} --}}
                </form>
            </div>
        </div>
    </div>